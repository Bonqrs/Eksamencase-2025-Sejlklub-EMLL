@page
@model WebApplication1.Pages.Boats.MaintenanceModel

<h2>Vedligeholdelseslog - @Model.Boat!.Name</h2>

<p class="text-muted">Bådtype: @Model.Boat.BoatType | Byggeår: @Model.Boat.YearBuilt</p>

<a class="btn btn-outline-success mb-3" href="/Boats/AddMaintenance?boatId=@Model.Boat.Id">Tilføj vedligehold</a>

@if (Model.MaintenanceLogs.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Dato</th>
                <th>Type</th>
                <th>Beskrivelse</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var log in Model.MaintenanceLogs)
            {
                <tr>
                    <td>@log.Date.ToString("dd/MM/yyyy")</td>
                    <td>@log.Type</td>
                    <td>@log.Description</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">
        Ingen vedligehold registreret endnu for denne båd.
    </div>
}

<hr />

<a class="btn btn-secondary" href="/Boats">Tilbage til oversigt</a>
