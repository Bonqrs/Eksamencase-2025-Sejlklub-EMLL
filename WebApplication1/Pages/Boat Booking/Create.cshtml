@page
@model WebApplication1.Pages.Boat_Booking.CreateModel
@{
    <h1>Opret Booking</h1>

    <form method="post">
        <div class="form-group">
            <label>Medlem</label>
            <select asp-for="Booking.MemberId" asp-items="Model.MemberList" class="form-control"></select>
        </div>

        <div class="form-group">
            <label>Båd</label>
            <select asp-for="Booking.BoatId" asp-items="Model.BoatList" class="form-control"></select>
        </div>

        <div class="form-group">
            <label>Destination / Farvand</label>
            <input asp-for="Booking.Destination" class="form-control" />
        </div>

        <div class="form-group">
            <label>Starttidspunkt</label>
            <input asp-for="Booking.StartTime" type="datetime-local" class="form-control" />
        </div>

        <button type="submit" class="btn btn-success mt-3">Opret Booking</button>
    </form>
}
