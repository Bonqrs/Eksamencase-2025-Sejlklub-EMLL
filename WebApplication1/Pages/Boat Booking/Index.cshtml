@page
@model WebApplication1.Pages.Boat_Booking.IndexModel
@{

    <h1>Booking Oversight</h1>
    // laver knappen som starter oprettelse af ny booking
    <p>
        <a asp-page="Create" class="btn btn-primary">Opret ny booking</a>
    </p>

    <h2>Aktive ture (på vandet)</h2>
    // laver tabellen der viser aktive bookinger
    <table class="table table-stiped">
        <thread>
            <tr>
                <th>Medlem</th>
                <th>Båd</th>
                <th>Destination</th>
                <th>Start</th>
                <th>Handling</th>
            </tr>
        </thread>
        <tbody>
    @foreach (var b in Model.ActiveBookings)
    {
             <tr>
                <td>@b.MemberName</td>
                <td>@b.BoatName</td>
                <td>@b.Destination</td>
                <td>@b.StartTime</td>
                <td>
                    <a asp-page="End" asp-route-id="@b.Id" class="btn btn-danger">
                    Afslut tur
                    </a>
                </td>
             </tr>
    }
        </tbody>
    </table>

    <h2>Afsluttede ture</h2>
    // laver tabellen der viser afsluttede bookinger
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Medlem</th>
                <th>Båd</th>
                <th>Destination</th>
                <th>Start</th>
                <th>Slut</th>
            </tr>
        </thead>
        <tbody>
    @foreach (var b in Model.CompletedBookings)
    {
            <tr>
                <td>@b.MemberName</td>
                <td>@b.BoatName</td>
                <td>@b.Destination</td>
                <td>@b.StartTime</td>
                <td>@b.EndTime</td>
            </tr>
            }
        </tbody>
    </table>
}
