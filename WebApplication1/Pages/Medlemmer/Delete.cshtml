@page
@model WebApplication1.Pages.Medlemmer.DeleteModel

<h2>Slet medlem</h2>

@if (Model.Member == null)
{
    <div class="alert alert-warning">Medlem ikke fundet.</div>
}
else
{
    <div class="mb-3">
        <p><strong>Navn:</strong> @Model.Member.FirstName @Model.Member.LastName</p>
        <p><strong>Email:</strong> @Model.Member.Email</p>
        <p><strong>Telefon:</strong> @Model.Member.Phone</p>
        <p><strong>Adresse:</strong> @Model.Member.Address</p>
    </div>

    <form method="post" class="d-inline">
        <input asp-for="Member.Id" type="hidden" />
        <button type="submit" class="btn btn-danger">Bekræft sletning</button>
    </form>

    <a asp-page="/Medlemmer/Index" class="btn btn-secondary ms-2">Annuller</a>
}
